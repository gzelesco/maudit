<?xml version="1.0" encoding="UTF-8"?>
<irs>
    <testCase>
        <testName>LoginTest</testName>
        <description>Test case for user login functionality</description>
        <input>
            <username>user123</username>
            <password>pass456</password>
        </input>
        <expectedOutput>
            <status>Success</status>
            <userInfo>
                <userId>12345</userId>
                <fullName>John Doe</fullName>
                <role>Admin</role>
            </userInfo>
        </expectedOutput>
    </testCase>

    <testCase>
        <testName>SearchProductTest</testName>
        <description>Test case for searching a product in the system</description>
        <input>
            <searchQuery>Laptop</searchQuery>
            <searchOptions>
                <category>Electronics</category>
                <priceRange>
                    <min>500</min>
                    <max>1500</max>
                </priceRange>
            </searchOptions>
        </input>
        <expectedOutput>
            <results>
                <product>
                    <name>Laptop XYZ</name>
                    <price>1200</price>
                    <availability>In Stock</availability>
                </product>
            </results>
        </expectedOutput>
    </testCase>

</irs>